{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "yuukips-launcher",
  "version": "0.1.0",
  "identifier": "com.yuukips.launcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "bundle": {
      "active": true,
      "targets": "all",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "wix": {
          "language": "en-US"
        },
        "nsis": {
          "languages": ["English"]
        },
        "webviewInstallMode": {
          "type": "downloadBootstrapper",
          "silent": true
        }
      }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "YuukiPS Launcher",
        "width": 1200,
        "height": 800,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {}
}
